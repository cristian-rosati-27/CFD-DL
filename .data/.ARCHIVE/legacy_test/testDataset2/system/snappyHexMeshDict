FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}

// Flags for optional mesh operations
castellatedMesh true;
snap            true;
addLayers       true;

geometry
{
    rocket
    {
        type triSurfaceMesh;
        file "rocket.stl";
    }
}

castellatedMeshControls
{
    maxLocalCells 100000;
    maxGlobalCells 2000000;
    minRefinementCells 0;
    maxLoadUnbalance 0.10;
    nCellsBetweenLevels 3;
    resolveFeatureAngle 30;
    allowFreeStandingZoneFaces true;    // Aggiunto questo parametro
    features
    (
        {
            file "rocket.eMesh";
            level 2;
        }
    );
    
    refinementSurfaces
    {
        rocket
        {
            level (2 3);
        }
    }

    refinementRegions
    {
        rocket
        {
            mode inside;
            levels ((1 2));
        }
    }

    locationInMesh (39 39 39);
}

snapControls
{
    nSmoothPatch 3;
    tolerance 4.0;
    nSolveIter 30;
    nRelaxIter 5;
    nFeatureSnapIter 10;
}

